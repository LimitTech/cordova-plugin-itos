<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-itos" version="0.0.2">
    <name>iots</name>
    <description>Cordova Itos SDK</description>
    <license>Apache 2.0</license>
    <keywords>cordova,itos</keywords>
    <js-module src="www/itos.js" name="itos">
        <clobbers target="cordova.plugins.itos"/>
    </js-module>

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="itos">
                <param name="android-package" value="es.limit.cordova.itos"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
            <uses-permission android:name="android.permission.BLUETOOTH"/>
            <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
        </config-file>

        <source-file src="src/android/Itos.java"
                     target-dir="src/android/Itos"/>
        <source-file src="lib/SDKItosDeviceLink.aar" target-dir="libs"/>
    </platform>
</plugin>
